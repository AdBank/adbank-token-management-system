{
  "name": "adbank-token-management-system",
  "version": "0.1.0",
  "private": true,
  "description": "Adbank Token Management System",
  "author": "Thomas Spangler",
  "repository": "git@github.com:itworld111/adbank-token-management-system.git",
  "license": "ISC",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=dev nodemon server.js ",
    "prebuild": "npm run clean",
    "build": "mkdir dist && cp -r ./src/* dist/",
    "postbuild": "cp package.json dist/package.json && cp Dockerfile dist/Dockerfile",
    "serve": "NODE_ENV=production node server.js",
    "pretest": "npm run clean",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test mocha --reporter spec --compilers js:babel-register ./src/**/*.spec.js",
    "test:integration": "NODE_ENV=test mocha --reporter spec --compilers js:babel-register ./src/**/*.integration.js",
    "test:watch": "NODE_ENV=test mocha --reporter min --watch --compilers js:babel-register ./src/**/*.spec.js --watch",
    "clean": "npm run rimraf dist",
    "rimraf": "rimraf"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "bignumber.js": "^6.0.0",
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cryptr": "^3.0.0",
    "errorhandler": "^1.5.0",
    "ethereum-address": "0.0.4",
    "ethereumjs-tx": "^1.3.3",
    "express": "^4.16.2",
    "mongoose": "^5.0.3",
    "morgan": "^1.9.0",
    "node-json-rpc": "0.0.1",
    "request": "^2.85.0",
    "strip-hex-prefix": "^1.0.0",
    "web3": "^1.0.0-beta.24",
    "winston": "^2.4.0",
    "zeppelin-solidity": "^1.3.0"
  }
}
